
@{
    ViewBag.Title = "Index";
    Layout = null;
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">

<h2>Index</h2>
<button onclick="AbrirModal(0)" type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
    Nuevo
</button>
<div id="divTabla">

</div>
<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="lblTitulo"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                <div class="form-group">
                    <label>Id Doctor</label>
                    <input  name="Id Doctor" class="limpiar form-control" type="text" id="txtIdDoctor" readonly />
                </div>

                <div class="form-group obligatorio">
                    <label>Nombre</label>
                    <input name="Nombre Doctor" type="text" id="txtNombre"  class="limpiar form-control obligatorio" />
                </div>

                <div class="form-group obligatorio">
                    <label>Apellido Paterno</label>
                    <input name="Apellido Paterno" type="text" id="txtApPaterno" class="limpiar form-control obligatorio" />
                </div>

                <div class="form-group obligatorio">
                    <label>Apellido Materno</label>
                    <input name="Apellido Materno" type="text" id="txtApMaterno" class="form-control limpiar" />
                </div>

                <div class="form-group">
                    <label>Nombre Clinica</label>
                    <select name="Nombre Clinica" id="cboClinica" class="form-control limpiar"></select>

                </div>

                <div class="form-group">
                    <label>Nombre Especialidad</label>
                    <select name="Nombre Esécialidad" id="cboEspecialidad" class="form-control limpiar"></select>

                </div>

                <div class="form-group">
                    <label>Email</label>
                    <input type="text" id="txtemail" class="form-control limpiar" />
                </div>

                <div class="form-group">
                    <label>Telefono celular</label>
                    <input type="text" id="txtTelefonoCelular" class="form-control limpiar" />
                </div>

                <div class="form-group">
                    <label>Sexo</label>
                    <input checked name="sexo" type="radio" id="rbSexoMascu" />
                    <label>Masculino</label>
                    <input name="sexo" type="radio" id="rbSexoFeme" />
                    <label>Femenino</label>
                </div>


                <div class="form-group">
                    <label>Sueldo</label>
                    <input type="text" name="Sueldo" id="txtsueldo" class="form-control limpiar obligatorio" />
                </div>

                <div class="form-group ">
                    <label>Fecha Contrato</label>
                    <input name="Fecha Contrato" type="date" id="txtFechaContrato" class="form-control limpiar obligatorio" />
                </div>

                <div class="form-group">
                    <label>Foto</label>
                    <img id="imgFoto" src="" width="300" height="300" />
                    <input type="file" id="fupFoto" class="form-control limpiar" accept="image/*" />
                </div>

            </div>
            <div class="modal-footer">
                <button type="button"onclick="Guardar()" class="btn btn-primary">Aceptar</button>
                <button id="btnClose" type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                
            </div>

            <div id="divError">
            
            </div>

        </div>
    </div>
</div>
